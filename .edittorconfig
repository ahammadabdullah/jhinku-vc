root = true

#####################################################
# Globale Standardwerte
#####################################################

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 160
trim_trailing_whitespace = true


#####################################################
# CI/CD & Build-Skripte
#####################################################

# Jenkinsfiles (inkl. Varianten wie Jenkinsfile.dev)
